# $1 = the name of the script
# $2 = pattern for functions (optional)
function list_functions(){
	if [[ "$2" == "" ]]; then
		find ./ -name $1 -exec cat {} \; |  grep -n 'func '
	else
		find ./ -name $1 -exec cat {} \; |  grep -n 'func ' | grep $2
	fi
}

godot_accessor() {
	name=${1#"_"}
	tab=$'\t'

	read -r -d '' OUTPUT  <<EOM
func get_$name():
${tab}return $1

func set_$name($name):
${tab}$1 = $name
EOM
  echo "$OUTPUT"
	echo "$OUTPUT" | pbcopy
}



gut(){
  local script=''
  if [[ $1 ]]; then
    script=" -gselect=$1 "
  else
    script=""
  fi

  local t=''
  if [[ $2 ]]; then
    test=" -gunit_test_name=$2"
  else
    test=""
  fi

  local options="--debug-collisions --path $PWD -d -s addons/gut/gut_cmdln.gd -gdir=res://test/unit,res://test/integration -glog=1 -gexit $script $test $3 ${@:3}"
  echo $options
 	#godot $options
  eval "$GODOT $options"
}


